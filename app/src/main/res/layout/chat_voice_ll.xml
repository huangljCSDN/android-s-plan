<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_voice_ll"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/chat_voice_speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="按住说话"
            android:textColor="#54CBDC"
            android:textSize="13sp" />

        <!--<com.s454881823.tpk.widget.VoiceDecorderView-->
        <com.cunai.chat.widget.VoiceDecorderView
            android:id="@+id/chat_voice_speak_left"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/chat_voice_speak"
            android:visibility="gone" />


        <com.cunai.chat.widget.VoiceDecorderView
            android:id="@+id/chat_voice_speak_right"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/chat_voice_speak"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/chat_voice_recording"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/chat_voice_icon" />
</LinearLayout>